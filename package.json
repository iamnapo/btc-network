{
	"name": "@iamnapo/btc-network",
	"version": "0.7.4",
	"description": "Tiny module that creates a btc network using docker images",
	"homepage": "https://github.com/iamnapo/btc-network#readme",
	"bugs": {
		"url": "https://github.com/iamnapo/btc-network/issues"
	},
	"repository": "github:iamnapo/btc-network",
	"license": "MIT",
	"author": {
		"name": "Napoleon-Christos Oikonomou",
		"email": "Napoleonoikon@gmail.com",
		"url": "https://iamnapo.me"
	},
	"type": "module",
	"exports": "./bin/btc-network.js",
	"bin": {
		"btc-network": "bin/btc-network.js"
	},
	"files": [
		"bin",
		"src",
		"lib"
	],
	"scripts": {
		"build": "esbuild bin/btc-network.js --bundle --platform=node --outfile=btc-network.cjs --inject:./import-meta-url.js --define:import.meta.url=import_meta_url && pkg btc-network.cjs -t node20-linux-x64,node20-macos-x64,node20-win-x64 --out-path binaries --compress Brotli",
		"start": "node ./bin/btc-network.js",
		"test": "eslint . --ext .js --cache"
	},
	"eslintConfig": {
		"extends": "iamnapo",
		"rules": {
			"no-bitwise": "off",
			"import/no-unresolved": [
				"error",
				{
					"ignore": [
						"@iamnapo/sort",
						"meow"
					]
				}
			],
			"unicorn/no-process-exit": "off"
		},
		"ignorePatterns": [
			"import-meta-url.js"
		]
	},
	"dependencies": {
		"@iamnapo/sort": "^2.2.0",
		"address": "^1.2.2",
		"chalk": "^5.2.0",
		"execa": "^7.1.1",
		"globby": "^13.1.4",
		"gradient-string": "^2.0.2",
		"inquirer": "^9.2.7",
		"js-yaml": "^4.1.0",
		"make-dir": "^3.1.0",
		"meow": "^12.0.1",
		"ora": "^6.3.1",
		"update-notifier": "^6.0.2"
	},
	"devDependencies": {
		"bitcoin-core": "^4.1.0",
		"chance": "^1.1.11",
		"dotenv": "^16.1.3",
		"esbuild": "^0.17.19",
		"eslint": "^8.42.0",
		"eslint-config-iamnapo": "^31.0.0",
		"mathjs": "^11.8.0",
		"moment": "^2.29.4",
		"mongoose": "^7.2.2",
		"pkg": "^5.8.1"
	},
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	}
}
